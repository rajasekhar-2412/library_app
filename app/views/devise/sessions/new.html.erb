<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.sign_in', :default => "Sign in") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <% if notice %><p class="strong"><%= notice %></p><% end %>
        <% if alert %><p class="strong"><%= alert %></p><% end %>
      <div class="form-group">
        <%= f.label "username or Email" %>
        <%= f.text_field :login, autofocus: true, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control",required: true %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end %>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
            <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name),class: "btn btn-primary" %><br />
        <% end -%>
    <% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
